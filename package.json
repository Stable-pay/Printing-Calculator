{
  "name": "my-calculator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install": "npm run install-client && npm run install-server",
    "build-client": "cd client && npm run build",
    "start-server": "cd server && npm run deploy",
    "deploy": "npm run install && npm run build-client && npm run start-server"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
